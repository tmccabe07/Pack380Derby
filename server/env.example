# .env
DATABASE_USER="(whoami)"
DATABASE_PASSWORD=""
DATABASE_NAME="pinewood_derby"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_URL="postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}"

# API Security - Bearer Token for API Authentication
# Generate a strong random token for production use
API_BEARER_TOKEN="your-secret-bearer-token-change-this"

# SSL Configuration
# Set to 'true' to enable HTTPS with SSL certificate
# Certificate file should be located at server/derby.crt
USE_SSL="false"
