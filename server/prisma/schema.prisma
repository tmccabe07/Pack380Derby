generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Racer {
  id Int     @id @default(autoincrement())
  name      String @db.VarChar(255)
  den       String? @db.VarChar(30)
  rank      String? @db.VarChar(30)
  racerType String @db.VarChar(30)
  car Car?
  votes Vote[]
}

model Car {
  id Int     @id @default(autoincrement())
  name      String @db.VarChar(255)
  weight String @db.VarChar(30)
  racer Racer @relation(fields: [racerId], references: [id])
  racerId Int @unique // relation scaler field, the unique decorator means one to one relationship
  year Int?
  image String?
  lane HeatLane[]
  votes Vote[]
}

model HeatLane {
  id    Int    @id @default(autoincrement())
  lane Int 
  result Int? 
  car Car @relation(fields: [carId], references: [id])
  carId Int 
  heatId Int
  race Race @relation(fields: [raceId], references: [id])
  raceId Int
  raceType Int 
  racerType String
}

model Race {
  id Int @id @default(autoincrement())
  raceName String @db.VarChar(255)
  raceType Int
  racerType String @db.VarChar(30)
  numLanes Int 
  lane HeatLane[]
}

model VoteCategory {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  description String?  @db.Text
  votes       Vote[]
}

model Vote {
  id           Int           @id @default(autoincrement())
  score        Int
  car          Car           @relation(fields: [carId], references: [id])
  carId        Int
  voter        Racer?         @relation(fields: [voterId], references: [id])
  voterId      Int?
  category     VoteCategory  @relation(fields: [categoryId], references: [id])
  categoryId   Int
}